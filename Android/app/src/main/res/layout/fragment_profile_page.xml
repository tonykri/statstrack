<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.homepages.ProfilePageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background_border">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePageFragmentPhoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_user"/>

                <TextView
                    android:id="@+id/profilePageFragmentFirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Tony"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profilePageFragmentPhoto"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profilePageFragmentLastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Kristaki"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profilePageFragmentPhoto"
                    app:layout_constraintTop_toBottomOf="@+id/profilePageFragmentFirstname" />

                <TextView
                    android:id="@+id/profilePageFragmentEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="tonykristaki@gmail.com"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profilePageFragmentPhoto" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profilePageFragmentUserData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_data"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10sp"
                        android:layout_height="1dp"
                        android:background="@color/darkGray"/>

                    <TextView
                        android:id="@+id/profilePageFragmentProfessionalData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/professional_data"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10sp"
                        android:layout_height="1dp"
                        android:background="@color/darkGray"/>

                    <TextView
                        android:id="@+id/profilePageFragmentPersonalData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/personal_data"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10sp"
                        android:layout_height="1dp"
                        android:background="@color/darkGray"/>

                    <TextView
                        android:id="@+id/profilePageFragmentHobbiesData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hobbies_data"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10sp"
                        android:layout_height="1dp"
                        android:background="@color/darkGray"/>

                    <TextView
                        android:id="@+id/profilePageFragmentExpensesData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/expenses_data"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_background_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_height="1dp"
                android:background="@color/darkGray"/>

            <TextView
                android:id="@+id/profilePageFragmentLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="18sp"/>
        </LinearLayout>
        </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>