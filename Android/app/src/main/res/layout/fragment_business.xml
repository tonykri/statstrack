<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/businessFragment"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_background_border"
    tools:context=".fragments.common.BusinessFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/businessFragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/businessFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessFragmentViewPager" />

    <TextView
        android:id="@+id/businessFragmentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loremmmmmmmmmmmmmmmffffffffffffffffffffffffffffffffffffffmmmmmm"
        android:paddingHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessFragmentTitle" />

    <TextView
        android:id="@+id/businessFragmentCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real Estate"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessFragmentDescription" />

    <TextView
        android:id="@+id/businessFragmentAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karaoli kai Dimitriou 80"
        android:textColor="@color/tealDark"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessFragmentCategory" />

    <TextView
        android:id="@+id/businessFragmentReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:text="387 reviews"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/businessFragmentStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:text="5.0"
        android:drawableStart="@drawable/ic_star"
        android:drawableTint="@color/yellow"
        android:drawablePadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>